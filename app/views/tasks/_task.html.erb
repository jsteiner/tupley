<li class='task'>
  <div class='task-content'>
    <label class='checkbox'>
      <input type='checkbox'>
      <span class='name'>
        <%= task.name %>
      </span>
    </label>

    <div class='description'>
      <%= markdown task.description %>
    </div>

    <ul class='tags'>
      <% task.tags.each do |tag| %>
        <li class='tag'>
          <%= link_to tag.name, tag_path(tag) %>
        </li>
      <% end %>
    </ul>

    <span class='controls'>
      <a href='#' class='edit-link'>edit</a>

      <span class='delete-task'>
        <a href="#" class='delete-link'>delete</a>
        <span class='delete-confirmation'>
          <a href= "#" class='cancel-link'>cancel</a>
          /
          <%= link_to 'destroy', task, method: :delete, class: 'destroy-link' %>
        </span>
      </span>
    </span>
  </div>

  <%= simple_form_for task do |form| %>
    <label class='checkbox'>
      <input type='checkbox'>
      <%= form.input :name, label: false %>
    </label>
    <%= form.input :description, label: false %>
    <%= form.input :tag_names, label: false %>
    <a href='#' class='button cancel-edit-link'>cancel</a>
    <%= form.submit value: 'save', class: 'save-link' %>
  <% end %>
</li>
